                <g id="SVGRepo_bgCarrier" stroke-width="0" transform="translate(2.24,2.24), scale(0.44)">
                <rect x="-0.8" y="-0.8" width="9.60" height="9.60" rx="4.8" fill="#090303" strokewidth="0"/>
                </g>
                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"/>
                <g id="SVGRepo_iconCarrier"> <path d="M4 0c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm-1 2l3 2-3 2v-4z"/></g>
                </svg>
            </div>
            <!-- WAV FORM Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
