  div.article-summary {
    padding-top: 1.25rem;
  }
  div.article-summary h4 {
    font-size: 1.5rem;
  }
  div.four-infos {
    margin-top: 60px; 
    display: grid; 
    grid-template-columns: 1fr 1fr 1fr 1fr; 
    grid-column-gap: 30px;
  }
  div.infograph-container {
    border: 1px dotted #444; 
    text-align: center;
    padding: 10px;
  }
  div.four-infos p {
    font-weight: 500;
    padding-top: 30px;
  }
  div.story {
    margin-top: 60px; 
    width: 100%; 
    display: grid; 
    grid-template-columns: 33% auto;
  }
  
  @media only screen and (max-width: 800px) {
    div.four-infos {
      grid-template-columns: 1fr 1fr;
      grid-row-gap: 30px;
    }
    div.infograph-container { 
      height: auto;
    }
    div.story {
      grid-template-columns: 1fr;
    }
  }
</style>


