<h3 class="center-title">
    FAQs
</h3>
<div class="faq-container" style="display: grid;">
    {%- for post in collections[faqPageList] -%}
    <div class="question" style="order: {%- if post.data.order -%}{{ post.data.order }}{%- else -%} 50{%- endif -%}">
      <svg class="plus" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" /></svg>
      <h4>
        {{ post.data.question }}
      </h4>
      <div class="faq-answer">
        {{ post.data.answer | markdown | safe }}
      </div>
    </div>
    {%- endfor -%}
  </div>


<!-- MAB - where to put this?! -->
<script>
  $(document).ready(function() {
    $("div.faq-container div.question h4, div.faq-container div.question svg").click(function() {
      $(this).parent("div.question").children("div.faq-answer").toggle();
      if ($(this).parent("div.question").children("svg").hasClass("plus")) {
        $(this).parent("div.question").children("svg").removeClass("plus");
        $(this).parent("div.question").children("svg").addClass("minus");
        $(this).parent("div.question").children("svg").html('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" /></svg>');
      }
      else {
        $(this).parent("div.question").children("svg").removeClass("minus");
        $(this).parent("div.question").children("svg").addClass("plus");
        $(this).parent("div.question").children("svg").html('<svg class="plus" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" /></svg>');
      }
    });
  });
</script>