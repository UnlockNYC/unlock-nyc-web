---
layout: layouts/base.njk
templateClass: tmpl-home
bg: ""
---
<style>

  div.card-wrapper {
    display: table-cell; 
    vertical-align: bottom; 
    padding-left: 10%;
  }
  div.report-card {
    height: 17.2vw; 
    width: 15vw; 
    min-height: 350px; 
    min-width: 320px;
  }
  div.top-banner {
    height: auto;
  }
  div.banner-wrapper.split {
    height: auto;
  }
  div.banner-split-text {
    padding-bottom: 20%;
  }
  
  @media only screen and (max-width: 800px) {
    div.card-wrapper {
      display: block;
      padding-left: 0;
    }
    div.report-card {
      margin: auto;
    }
    div.banner-split-text {
      padding-bottom: 12%;
    }
    div.top-banner {
      padding-bottom: 0;
    }
  }

</style>
{# page template, extends the base template #}

<div class="top-banner">
  <div class="content" style="padding-bottom: 0; padding-top: 0;">
  <div class="banner-wrapper split">
    <div class="banner-split-text">
      <p class="subtitle">
        Data & Research
      </p>
      <h1>
        {{ reportTitle }}
      </h1>
      <p>
        {{ reportSummaryTop }}
      </p>
      <button class="black">
        Download Report
      </button>
    </div>
    <div style="display: table">
      <div class="card-wrapper">
        <div class="bg-yellow report-card">         
        </div>
      </div>
    </div>
    
  </div>
</div>
</div>
<div class="content" style="background-color: White; padding-top: 30px;">
  <div style="padding: 0 5%;">
    <h4>
      Summary
    </h4>
    <p>
      {{ reportSummary }}
    </p>
    <p class="black" style="font-size: 1.15em; font-weight: 500; margin-top: 1rem;">
      Press Features
    </p>
    <div class="press-collection">
      <div class="press-item">
        <div class="bg-cream">
          logo
        </div>
        <div class="press-summary">
          <p class="date">March 7, 2023</p>
          <p>
            <a class="press-link">With free digtial tols, Unlock NYC is expanding </a>
          </p>
        </div>
      </div>
        
    </div>

  </div>
</div>