---
layout: layouts/base.njk
templateClass: tmpl-home
bg: ""
---
<style>

  div.report-card-wrapper {
    display: table-cell; 
    vertical-align: bottom; 
    padding-left: 10%;
  }
  div.report-card {
    height: 17.2vw; 
    width: 15vw; 
    min-height: 350px; 
    min-width: 320px;
    display: grid;
    grid-template-rows: 60px auto;
  }
  div.report-card div {
    padding: 20px;
  }
  div.report-card div:first-child {
    border-bottom: 1px solid Black;
  }
  span.tag {
    /*background-color: Black;
    color: White;*/
    border: 1px solid Black;
    border-radius: 1.25rem;
    padding: 6px 8px;
    margin-right: 6px;
    font-size: 0.8rem;
  }
  div.top-banner {
    height: auto;
  }
  div.banner-wrapper.split {
    height: auto;
  }
  div.banner-split-text {
    padding-bottom: 20%;
  }
  div.press-item {
    display: grid;
    grid-template-columns: 1fr 3fr;
    grid-column-gap: 20px;
    margin-bottom: 20px;
  }
  a.press-link {
    color: Black;
    text-decoration: underline;
  }
  
  @media only screen and (max-width: 800px) {
    div.card-wrapper {
      display: block;
      padding-left: 0;
    }
    div.report-card {
      margin: auto;
    }
    div.banner-split-text {
      padding-bottom: 12%;
    }
    div.top-banner {
      padding-bottom: 0;
    }
    div.press-item {
      grid-template-columns: 1fr;
      grid-row-gap: 20px;
    }
  }

</style>
{# page template, extends the base template #}

