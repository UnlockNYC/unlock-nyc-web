---
layout: layouts/base.njk
templateClass: tmpl-home
---

<style>
    div.top-banner {
        height: auto;
        min-height: unset;
        padding-top: 20vh;
    }
    div.top-banner h5 {
        font-family: var(--courier);
        font-size: 15px;
        margin-bottom: 3px;
        font-weight: 400;
        line-height: 22px;
    }
    div.content {
        padding: 3% 18% 6%;
    }
    div.content h1 {
        font-size: 24px;
        margin-top: 3.5rem;
        margin-bottom: 1.5rem;
        line-height: 36px;
        font-weight: 500;
    }
    div.content p {
        text-align: justify;
    }

</style>
{# page template, extends the base template #}

<div class="top-banner">
  <div class="banner-wrapper">
    <div class="banner-content">
        <img src="{{ image }}" style="max-width: 100%; margin-bottom: 25px;" alt="{{ alt }}">
      <h1>
        {{ title }}
      </h1>
      <h5>By {{ author }}</h5>
      <h5>Last updated: {{ page.date.toLocaleString('en-US', {day: 'numeric', month: 'long', year: 'numeric'}) }}</h5>
    </div>
  </div>
</div>
<div class="content">
    {{ content | safe }}
    <div class="article-tags" style="margin-bottom: 20px;">
        <p class="black"><strong>Tags:</strong></p>
        {%- for item in keywords -%}
        <span class="tag">{{ item }}</span>
        {%- endfor -%}
    </div>
    <div>
    {% set previousPost = collections.articles | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.articles | getNextCollectionItem(page) %}
    {% if previousPost %}
    <p class="black">
        <strong>Read Previous Article:</strong>
        <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></p>
    {% endif %}
    {% if nextPost %}
    <p class="black">
        <strong>Read Next:</strong>
        <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></p>
    {% endif %}
    </div>

</div>
