<style>
  
  div#data-grid {
    display: grid; 
    grid-template-columns: 33% auto; 
    grid-column-gap: 60px;
  }
  
  div#data-grid-text {
    padding-top: 30px;
  }
  
  @media only screen and (max-width: 800px) {
    div#data-grid {
      grid-template-columns: 1fr;
      margin-top: -30px;
    }
    div#data-grid-text {
      text-align: center;
      max-width: 80%;
      margin: auto;
      margin-bottom: 30px;
    }
  }
</style>
{# page template, extends the base template #}

<div class="top-banner">
  <div class="banner-wrapper">
    <div class="banner-content">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
    </div>
  </div>
</div>
<div class="content">
  <div id="data-grid">
    <div id="data-grid-text">
      <h4 style="font-size: 1.5rem; margin-top: 2.5rem;">
        People-Powered Data for Fair Housing
      </h4>
      <p class="black">
        We partner with researchers, community members, and grassroots organizations to interpret our growing dataset and use it to spark movement-wide change. We publish reports, make policy recommendations, and produce other creative research to share our findings.
      </p>
    </div>
    <div style="display: grid; grid-template-columns: 1fr 1fr; grid-column-gap: 20px;">
      <div class="report-card-wrapper">
        <div class="bg-yellow report-card">   
          <div>
            <span class="tag">Report</span>
            <span class="tag">2022</span>
          </div>
          <div>
            <p class="black" style="text-decoration: underline;">
              <strong>Featured Report</strong>
            </p>
            <h4 style="font-size: 1.5rem;">
              {{ reportTitle }}
            </h4>
            <p class="black">
              {{ reportSummaryTop }}
            </p>
          </div>
        </div>
      </div>
      <div class="report-card-wrapper">
        <div class="bg-green report-card">   
