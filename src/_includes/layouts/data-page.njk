---
layout: layouts/base.njk
templateClass: tmpl-home
---

<!-- MAB include here?! or somewhere else?! -->
<style>

  div#data-grid {
      display: grid;
      grid-template-columns: 33% auto;
      grid-column-gap: 60px;
  }

  div#data-grid-text {
      padding-top: 30px;
  }

  div#map-grid {
      display: grid;
      grid-template-columns: 58% auto;
      grid-column-gap: 0;
  }

  div#data-grid div.report-card-wrapper:nth-child(odd) div.report-card {
      background-color: var(--yellow);
  }

  div#data-grid div.report-card-wrapper:nth-child(even) div.report-card {
      background-color: var(--green);
  }

  @media only screen and (max-width: 800px) {
    div#data-grid {
        grid-template-columns: 1fr;
        margin-top: -30px;
    }
    div#data-grid-text {
        text-align: center;
        max-width: 80%;
        margin: auto;
        margin-bottom: 30px;
    }
    div#map-grid {
        grid-template-columns: 1fr;
    }
  }
</style>
{# page template, extends the base template #}

<div class="top-banner">
  <div class="banner-wrapper">
    <div class="banner-content">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
    </div>
  </div>
</div>
<div class="content">
  <div id="data-grid">
    <div id="data-grid-text">
      <h4 style="font-size: 1.5rem; margin-top: 2.5rem;">
        People-Powered Data for Fair Housing
      </h4>
      <p class="black">
        We partner with researchers, community members, and grassroots organizations to interpret our growing dataset and use it to spark movement-wide change. We publish reports, make policy recommendations, and produce other creative research to share our findings.
      </p>
    </div>
    <div style="display: grid; grid-template-columns: 1fr 1fr; grid-column-gap: 20px;">
      {%- for report in collections.featured -%}
      <div class="report-card-wrapper">
        <div class="report-card">
          <div>
            <span class="tag">{{ report.data.keywords }}</span>
            <span class="tag">{{ report.data.year }}</span>
          </div>
          <div>
            <p class="black" style="text-decoration: underline;">
              <strong>Featured Report</strong>
            </p>
            <h4 style="font-size: 1.5rem;">
              {{ report.data.reportTitle }}
            </h4>
            <p class="black">
              {{ report.data.reportSummaryTop }}
            </p>
            <br><br><br>
            <a href="{{ report.data.reportLink }}">
                <button class="black">
                    Read report
                </button>
            </a>
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
  <div id="map-grid" class="bg-purple" style="width: 100%; margin-top: 30px; overflow: hidden;">
    <div style="background: url('https://public-unlock.nyc3.digitaloceanspaces.com/media/Community-Map_Purple.png'); background-size: cover; background-position: center center; min-height: 300px;"></div>
    <div class="report-card-wrapper">
        <div class="bg-purple report-card">
            <div>
                <span class="tag">Interactive Map</span>
                <span class="tag">2022</span>
            </div>
            <div>
                <p class="black" style="text-decoration: underline;">
                    <strong>Featured</strong>
                </p>
                <h4 style="font-size: 1.5rem;">
                  Community-powered Discrimination Map
                </h4>
                <p class="black" style="margin-top: 25px; font-size: 14px;">
                    See where our users have reported unfair treatment by landlords and brokers and send an email to your council member about why you care about this issue.
                </p>
                <button class="black">
                    Explore the map
                </button>
            </div>
        </div>
    </div>
  </div>
  <h3 class="center-title">
    Our Data in Action
  </h3>
  {% include 'layouts/blocks50.njk' %}
  <div style="text-align: center; width: 100%;">
    <button class="black">
      Read more
    </button>
  </div>
</div>
<div class="content" style="padding-top: 3%; background-color: White;">
  {% include 'layouts/faqs.njk' %}
</div>
<div class="banner-full bg-orange">
  <h3>
    {{ orangeBannerTitle }}
  </h3>
  <h2 style="max-width: 60%; margin: auto; margin-bottom: 30px;">
    {{ orangeBannerText }}
  </h2>
  <button class="black">
    Make a Request
  </button>
</div>