{% for thing in blocksList %}
<div class="blocks-wrapper{% if blocksFirst == 'image'%} image-first{% endif %}">
  <div class="block">
    <h4>
    {{ thing.title }}
    </h4>
    <p>
      {{ thing.text }}
    </p>
    {% if thing.button == 'yes' %}
    {% for button in thing.buttonList %}
      <!--<button {% if blocksButtonColor == 'black'%} class="black" {% else %} class="yellow" {% endif %}>-->
      <button {% if blocksButtonColor == 'yellow'%} class="yellow" {% else %} class="black" {% endif %}>
        {{ button.buttonText }}
      </button>
    {% endfor %}
    {% endif %}
  </div>
  <!--<div class="block image" style="background: url('/public/{{ thing.image }}'); background-size: cover; background-position: center center; border: 1px solid lightgray;">-->
  <div class="block image">
    <img src="/public/{{ thing.image }}" style="object-fit: cover; width: 100%;">
  </div>
</div>
{% endfor %}

