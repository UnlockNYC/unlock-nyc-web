{% for thing in blocksList %}
<div class="blocks-wrapper{% if blocksFirst == 'image'%} image-first{% endif %}">
  <div class="block">
    <h4>
    {{ thing.title }}
    </h4>
    <p>
      {{ thing.text }}
    </p>
    {% if thing.button == 'yes' %}
    {% for button in thing.buttonList %}
    <a href="{{ button.buttonLink }}">
      <button {% if blocksButtonColor == 'yellow'%} class="yellow" {% else %} class="black" {% endif %}>
        {{ button.buttonText }}
      </button>
    </a>
    {% endfor %}
    {% endif %}
  </div>
  <div class="block image">
    <img src="{{ thing.image }}" alt="{{ thing.alt }}" style="object-fit: cover; width: 100%;" alt="{{ thing.alt }}">
  </div>
</div>
{% endfor %}