{% for thing in blocksList %}
<div class="blocks-wrapper{% if blocksFirst == 'image'%} image-first{% endif %}">
  <div class="block">
    <h4>
    {{ thing.title }}
    </h4>
    <p>
      {{ thing.text }}
    </p>
    {% if thing.button == 'yes' %}
    {% for button in thing.buttonList %}
      <button {% if blocksButtonColor == 'black'%} class="black" {% else %} class="yellow" {% endif %}>
        {{ button.buttonText }}
      </button>
    {% endfor %}
    {% endif %}
  </div>
  <div class="block image">
    {{ thing.image }}
  </div>
</div>
{% endfor %}

