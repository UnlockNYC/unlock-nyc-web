---
layout: layouts/base.njk
templateClass: tmpl-home
---

<!-- MAB include here?! or somewhere else?! -->
<style>
    body {
        background-color: var(--cream);
    }
    div.top-banner {
        height: auto;
        min-height: unset;
        padding-top: 20vh;
    }
    div.top-banner h5 {
        font-family: var(--courier);
        margin-bottom: 3px;
        font-weight: 400;
        font-size: 16px;
    }
    div.content {
        padding: 3% 18% 6%;
    }
    div.content h1 {
        font-size: 24px;
        margin-top: 3.5rem;
        margin-bottom: 1.5rem;
        line-height: 36px;
        font-weight: 500;
    }
    div.content h2 {
        font-family: var(--page-font);
        font-size: 20px;
        line-height: 28px;
        font-weight: 500;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    div.content p {
        text-align: justify;
    }

</style>
{# page template, extends the base template #}

<div class="top-banner">
  <div class="banner-wrapper">
    <div class="banner-content">
      <h1>
        {{ title }}
      </h1>
      <h5>
          <span style="text-decoration: underline;">Effective date:</span> {{ effective }}
      </h5>
      <h5>
          <span style="text-decoration: underline;">Last revised:</span> {{ revised }}
      </h5>
    </div>
  </div>
</div>
<div class="content">
    {{ content | safe }}
</div>