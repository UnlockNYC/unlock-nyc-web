---
layout: layouts/base.njk
templateClass: tmpl-home
---
<!-- MAB CONSIDER WHERE TO PUT THESE! -->
<style>

  div.top-banner {
    background: linear-gradient(180deg, #FD9A54 39.43%, #785DC7 100%);
  }
  img.banner-fill-baseline {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: 0 -30px;
  }
  div.blocks-icons-wrapper h4 {
      margin-top: -0.1em;
  }
  div.blocks-icons-wrapper.links {
    margin-bottom: 50px;
  }
  div.blocks-icons-wrapper .block.image img {
      max-width: 95%;
  }
  div#keys-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-column-gap: 20px;
    margin-bottom: 50px;
  }
  div#keys-grid div {
      max-width: 100%;
      max-height: 400px;
      overflow: hidden;
  }
  div#keys-grid div img {
      max-width: 100%;
  }
  /* MAB: is this a more general class?*/
  p#looking-for {
    max-width: 50%;
    margin: auto;
    margin-bottom: 2rem;
    text-align: center;
    margin-bottom: 60px;
  }
  @media only screen and (max-width: 800px) {
    img.banner-fill-baseline {
        object-position: 0 0;
    }
    div.banner-img-wrap {
        max-height: 40vh;
        overflow: hidden;
    }
    div#keys-grid {
      grid-template-columns: 1fr 1fr;
      grid-row-gap: 30px;
    }
    p#looking-for {
      max-width: 90%;
    }
    div.blocks-icons-wrapper .block.image img {
        max-width: 100%;
    }
  }
</style>
{# page uses this template–it extends the base template #}
<div class="top-banner">
  <div class="banner-wrapper split">
    <div class="banner-split-text">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
      <a href="/start">
        <button class="yellow">
            Get Started
        </button>
      </a>
    </div>
    <div class="banner-img-wrap" style="position: relative">
      <img src="https://public-unlock.nyc3.digitaloceanspaces.com/forvoucher-heroimg.jpg" class="banner-fill-baseline" alt="Unlock subway advertisement, posted on white subway tiles, with a woman passing in front of it looking at her phone, wearing a black winter coat">
    </div>
  </div>
</div>
<div class="content">
  {% include 'layouts/blocks50.njk' %}
  <h3 class="center-title">
    {{ keysHeadline }}
  </h3>
  <div id="keys-grid">
    <div>
      <img src="{{ keyImage1 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage2 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage3 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage4 }}" alt="photograph of hands holding set of keys">
    </div>
  </div>
  <div class="bg-purple two-stats">
      {% for stat in statistics %}
    <div class="stat">
      <div>
        <h1 style="margin: 0;padding: 0;font-size: 4rem;">
          {{ stat.statNum }}
        </h1>
      </div>
      <div>
        <h4 style="margin: auto; padding-top: 5px; max-width: 90%;">
          {{ stat.statText }}
        </h4>
      </div>
    </div>
    {% endfor %}
  </div>
  {% include 'layouts/quote-block.njk' %}
</div>
<div class="content bg-cream">
  <div>
    <h3 style="text-align: center; margin-top: 0;">
      Not quite what you're looking for?
    </h3>
    <p id="looking-for" class="black">
      Unlock NYC helps you record and report discrimination on your housing search. If you’re having a different issue, try one of these organizations!
    </p>
    {% for thing in linksList %}
    <div class="blocks-icons-wrapper links">
      <div class="block image">
        <img src="{{ thing.image }}" alt="{{ thing.org }} logo">
      </div>
      <div class="block">
        <h4>
        {{ thing.title }}
        </h4>
        <p class="black">
          {{ thing.text }}
        </p>
        {% if thing.button == 'yes' %}
        <a href="{{ thing.buttonLink }}">
            <button>
            {{ thing.buttonText }}
            </button>
        </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
    </div>
  </div>