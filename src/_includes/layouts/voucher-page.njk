templateClass: tmpl-home
---
<style>
{% include "styles/home.css" %}
  div.blocks-icons-wrapper links {
    
  }
</style>
{# page uses this template–it extends the base template #}
<div class="top-banner">
  <div class="banner-wrapper">
    <div class="banner-content">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
      <button class="White">
        Get Started
      </button>
    </div>
  </div>
</div>
<div class="content">
  {% include 'layouts/blocks50.njk' %} 
  <h3 class="center-title">
    Unlocking doors headline
  </h3>
  <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; grid-column-gap: 20px; margin-bottom: 50px;">
    <div style="background-color: #444; height: 300px;">
      {{ keyImage1 }}
    </div>
    <div style="background-color: #444; height: 300px;">
      {{ keyImage2 }}
    </div>
    <div style="background-color: #444; height: 300px;">
      {{ keyImage3 }}
    </div>
    <div style="background-color: #444; height: 300px;">
      {{ keyImage4 }}
    </div>
  </div>
  <!-- MAB NOTE: re-use below as component-->
  <div class="bg-purple" style="width: 100%; padding: 30px; display: grid; grid-template-columns: 50% 50%;">
    <div style="border-right: 1px solid Black; padding: 30px; display: grid; grid-template-columns: 50% auto; grid-column-gap: 15px;">
      <div>
        <h1 style="margin: 0;padding: 0;font-size: 6rem;">
          ##
        </h1>
      </div>
      <div>
        stat description 1
      </div>
    </div>
    <div style="padding: 30px; display: grid; grid-template-columns: 50% auto; grid-column-gap: 15px;">
      <div>
        <h1 style="margin: 0;padding: 0;font-size: 6rem;">
          ##
        </h1>
      </div>
      <div>
        stat description 2
      </div>
    </div>
  </div>
  <!-- MAB NOTE: re-use as component? -->
  <h3 class="quote">
    "{{ quote }}"
  </h3>
  <div style="text-align: center; margin-top: 60px;">
    <div class="bg-purple" style="width: 100px; height: 100px; border-radius: 50%; display: inline-block;">
      img
    </div>
    <p style="font-weight: 500; margin-top: 15px;">
      {{ quoteAuthor }}
    </p>
    <p style="margin-top: -10px;">
      {{ authorTitle }}
    </p>
  </div>
</div>
<div class="content bg-cream">
  <div>
    <h3 class="center-title" style="margin-top: 0;">
      Not quite what you're looking for?
    </h3>
    <p style="max-width: 50%; margin: auto; margin-bottom: 2rem; text-align: center; margin-bottom: 60px;">
      Unlock NYC helps you record and report discrimination on your housing search. If you’re having a different issue, try one of these organizations!
    </p>
    {% for thing in linksList %}
  <div class="blocks-icons-wrapper links">
    <div class="block image">
      {{ thing.image }}
    </div>
    <div class="block">
      <h4>
      {{ thing.title }}
      </h4>
      <p>
        {{ thing.text }}
      </p>
      {% if thing.button == 'yes' %}
      <button class="yellow">
        {{ thing.buttonText }}
      </button>
      {% endif %}
    </div>
  </div>
  {% endfor %}
    </div>
  </div>



