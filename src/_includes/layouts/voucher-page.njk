---
layout: layouts/base.njk
templateClass: tmpl-home
---
<!-- MAB CONSIDER WHERE TO PUT THESE! -->
<style>

  div.top-banner {
    background: linear-gradient(180deg, #FD9A54 39.43%, #785DC7 100%);
  }
  div.blocks-icons-wrapper h4 {
      margin-top: -0.1em;
  }
  div.blocks-icons-wrapper.links {
    margin-bottom: 50px;
  }
  div.blocks-icons-wrapper .block.image img {
      max-width: 95%;
  }
  div#keys-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-column-gap: 20px;
    margin-bottom: 50px;
  }
  div#keys-grid div {
      max-width: 100%;
      max-height: 400px;
      overflow: hidden;
  }
  div#keys-grid div img {
      max-width: 100%;
  }
  /* MAB: is this a more general class?*/
  p#looking-for {
    max-width: 50%;
    margin: auto;
    margin-bottom: 2rem;
    text-align: center;
    margin-bottom: 60px;
  }
  @media only screen and (max-width: 800px) {
    div#keys-grid {
      grid-template-columns: 1fr 1fr;
      grid-row-gap: 30px;
    }
    p#looking-for {
      max-width: 90%;
    }
    div.blocks-icons-wrapper .block.image img {
        max-width: 100%;
    }
  }
</style>
{# page uses this template–it extends the base template #}
<div class="top-banner">
  <div class="banner-wrapper split">
    <div class="banner-split-text">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
      <button class="yellow">
        Get Started
      </button>
    </div>
    <div style="min-height: 200px; padding: 20px; position: relative;">
      <img src="https://public-unlock.nyc3.digitaloceanspaces.com/forvoucher-heroimg.jpg" class="baseline-banner" style="max-width: 85%; object-fit: cover; object-position: top; top: 6%; bottom: initial;" alt="Unlock subway advertisement, posted on white subway tiles, with a woman passing in front of it looking at her phone, wearing a black winter coat">
    </div>
  </div>
</div>
<div class="content">
  {% include 'layouts/blocks50.njk' %}
  <h3 class="center-title">
    {{ keysHeadline }}
  </h3>
  <div id="keys-grid">
    <div>
      <img src="{{ keyImage1 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage2 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage3 }}" alt="photograph of hands holding set of keys">
    </div>
    <div>
      <img src="{{ keyImage4 }}" alt="photograph of hands holding set of keys">
    </div>
  </div>
  <!-- MAB NOTE: re-use below as component-->
  <div class="bg-purple two-stats">
    <div class="stat">
      <div>
        <h1 style="margin: 0;padding: 0;font-size: 6rem;">
          ##
        </h1>
      </div>
      <div>
        <h4 style="margin: 0;">
          stat description 1
        </h4>
      </div>
    </div>
    <div class="stat">
      <div>
        <h1 style="margin: 0;padding: 0;font-size: 6rem;">
          ##
        </h1>
      </div>
      <div>
        <h4 style="margin: 0;">
          stat description 2
        </h4>
      </div>
    </div>
  </div>
  <!-- MAB NOTE: re-use as component? -->
  <h3 class="quote">
    "{{ quote }}"
  </h3>
  <div style="text-align: center; margin-top: 60px;">
    <div class="bg-purple" style="width: 100px; height: 100px; border-radius: 50%; display: inline-block;">
      <img src="{{ authorImg }}" style="max-width: 100%;">
    </div>
    <p class="black" style="font-weight: 500; font-size: 1.2em; margin-top: 15px;">
      {{ quoteAuthor }}
    </p>
    <p class="black" style="margin-top: -10px;">
      {{ authorTitle }}
    </p>
  </div>
</div>
<div class="content bg-cream">
  <div>
    <h3 style="text-align: center; margin-top: 0;">
      Not quite what you're looking for?
    </h3>
    <p id="looking-for">
      Unlock NYC helps you record and report discrimination on your housing search. If you’re having a different issue, try one of these organizations!
    </p>
    <!-- MAB, maybe make this a partial? Also used in housing specialist page-->
    {% for thing in linksList %}
    <div class="blocks-icons-wrapper links">
      <div class="block image">
        <img src="{{ thing.image }}" alt="{{ thing.org }} logo">
      </div>
      <div class="block">
        <h4>
        {{ thing.title }}
        </h4>
        <p>
          {{ thing.text }}
        </p>
        {% if thing.button == 'yes' %}
        <a href="{{ button.buttonLink }}">
            <button>
            {{ thing.buttonText }}
            </button>
        </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
    </div>
  </div>



