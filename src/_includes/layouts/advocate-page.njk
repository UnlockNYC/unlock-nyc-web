---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# page template, extends the base template #}

<div class="top-banner bg-purple">
  <div class="banner-wrapper split">
    <div class="banner-split-text">
      <p class="subtitle">
        Our Tools
      </p>
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
      <a href="{{ scheduleLink }}">
        <button class="yellow">
            Schedule now
        </button>
      </a>
      <a href="{{ demoLink }}">
        <button class="black">
            Watch the demo
        </button>
      </a>
    </div>
    <div style="min-height: 200px; padding: 20px; position: relative;">
      <img src="https://public-unlock.nyc3.digitaloceanspaces.com/home-Image 2.png" class="baseline-banner" alt="two young people facing opposite directions, one using a phone against a purple background and the other using a laptop against a blue background">
    </div>
  </div>
</div>
<div class="content">
  <h3 class="center-title top">
    How it Works
  </h3>
  {% include 'layouts/blocks-icons.njk' %}
  {% include 'layouts/faqs.njk' %}
  <h3 class="center-title">
    Learn more
  </h3>
  <div class="banner-full bg-yellow">
    <h3>
      {{ yellowBannerTitle }}
    </h3>
    <p class="black">
      {{ yellowBannerText }}
    </p>
    <a href="{{ yellowBannerLink }}">
        <button class="black">
        Sign Up
        </button>
    </a>
  </div>
  {% include 'layouts/article-list.njk' %}
  </div>
</div>
</div>
