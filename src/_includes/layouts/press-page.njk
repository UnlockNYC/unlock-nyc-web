---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# page template, extends the base template #}

<div class="top-banner bg-cream">
  <div class="banner-wrapper">
    <div class="banner-content">
      <h1>
        {{ bannerTitle }}
      </h1>
      <h2>
        {{ bannerText }}
      </h2>
      <button class="black">
        Submit a media request
      </button>
    </div>
  </div>
</div>
<div class="content">
  <h3>
    Latest News Stories
  </h3>
  <button class="white" style="float: right; margin-top: -70px;">
    View All
  </button>
  <div style="border-top: 2px solid #D9D9D9; padding-top: 20px; height: 50vh;">
    build press collection here
  </div>
</div>
<div class="content">
  <h3>
    Press Releases
  </h3>
  <button class="white" style="float: right; margin-top: -70px;">
    View All
  </button>
  <div style="border-top: 2px solid #D9D9D9; padding-top: 20px; height: 25vh;">
    build press release collection here
  </div>
  <h3 class="center-title">
    Press Kits
  </h3>
  <div style="display: grid; grid-template-columns: 1fr 1fr; grid-column-gap: 30px;">
    <div class="bg-purple" style="position: relative; height: 30vh; padding: 6%;">
      <button class="black" style="position: absolute; bottom: 6%;">
        Download PDF
      </button>
    </div>
    <div class="bg-green" style="position: relative; height: 30vh; padding: 6%;">
      <button class="black" style="position: absolute; bottom: 6%;">
        Download ZIP
      </button>
    </div>
  </div>
  <h3 class="center-title">
    FAQs
  </h3>
  <div style="border: 1px dotted Black; height: 600px;">
    build FAQ collection here
  </div>
  <div class="banner-full bg-orange">
    Working
  </div>
</div>