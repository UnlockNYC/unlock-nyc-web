<html lang="en">
  <head>
    {# This is the base template for the site â€“ other templates extend this one #}
    <meta charset="utf-8" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Unlock NYC Website 2.0 Draft" />
    <link rel="stylesheet" type="text/css" href="/public/style.css" />
    {% seo "" %}
    <!--scripts-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script> 
  </head>
  <body style="background-color: {{ bg }}">
    <main>
      {% include 'layouts/nav.njk' %} 
      
      {# Page or post content will appear here #}
      {{ content | safe }}

      {% include 'layouts/footer.njk' %} 

  </main>
    
  <script>
    /*MAB: MOVE INTO FILE! */
    /* DESKTOP, HEADER BEHAVIOR */
    $("nav#main ul#top > li").on("mouseenter", function(){
      if ($(window).width() > 1100) {
        $("ul.submenu").hide();
        $(this).children("ul.submenu").show();
      }
    });
    $("ul.submenu").on("mouseleave", function() {
      if ($(window).width() > 1100) {
        $(this).hide();
      }
    });
    /* MOBILE MENU BEHAVIOR */
    $("#nav-logo").click(function(e) {
      if ($(window).width() <= 1100) {
          e.preventDefault();
          $("nav ul#top").toggleClass("mobile-open");
          $("nav#main").toggleClass("mobile-open");
      }
    });
    $("nav#main ul#top > li > a").click(function(e) {
      if ($(window).width() <= 1100) {
        e.preventDefault();
        $(this).parent("li").children("ul.submenu").toggleClass("mobile-open");
      }
    });

  
    
  </script>
   
  </body>
</html>